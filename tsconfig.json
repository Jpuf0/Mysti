{
  "extends": "@smol-code/tsconfig",
  "compilerOptions": {
    "outDir": "./build",
    "baseUrl": "./src",
    "strictPropertyInitialization": false,
    "skipLibCheck": true,
    "inlineSourceMap": true,
    "paths": {
      "@root/*": ["../*"],
			"@config": ["config/index.ts"],
			"@config/*": ["config/*"],
			"@util/*": ["util/*"],
			"@handlers/*": ["util/handlers/*"],
			"@events/*": ["events/*"],
			"@Mysti": ["main.ts"]
    },
  },
  "include": [
    "**/*"
  ],
  "exclude": [
    "node_modules",
    "build",
    "tmp",
    "logs",
    "test"
  ],
}